<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    android:orientation="vertical"
    tools:context=".Services">

    <Button
        android:id="@+id/backservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="@string/back"
        android:textSize="18sp"
        android:gravity="left"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DIGOS EMERGENCY HOTLINES"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="41dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"

            android:text="Digos Hospital"
            android:textColor="#FFEB3B"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact for medical assistance or ambulance services"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/msgButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#0BCBE3"
                android:contentDescription="@string/msg_button"
                android:src="@drawable/msg24"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/e1"
                android:textColor="@color/black"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:text="+639218601111"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/callButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#FEC007"
                android:contentDescription="@string/call_button"
                android:src="@drawable/calll"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Digos PNP"
            android:textColor="#FFEB3B"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact for police assistance during difficult situations"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
